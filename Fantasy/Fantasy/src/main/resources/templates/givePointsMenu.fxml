      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <padding>
         <Insets bottom="10.0" top="10.0" />
      </padding>
   </Label>
   <TextField fx:id="searchField" promptText="Buscar futbolista" />
   <TableView fx:id="footballersTableView" prefHeight="479.0" prefWidth="563.0">
      <columns>
         <TableColumn fx:id="teamNameColumn" prefWidth="135.0" resizable="false" sortable="false" style="-fx-alignment: CENTER;" text="Equipo" />
         <TableColumn fx:id="footballerNameColumn" prefWidth="234.0" resizable="false" sortable="false" style="-fx-alignment: CENTER;" text="Nombre" />
         <TableColumn fx:id="actionColumn" prefWidth="134.0" resizable="false" sortable="false" style="-fx-alignment: CENTER;" text="Añadir" />
      </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>
</VBox>
